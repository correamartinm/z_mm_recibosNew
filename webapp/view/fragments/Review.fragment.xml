<core:FragmentDefinition xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">


    <VBox  class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTopBottom" height="50%" justifyContent="SpaceBetween" width="80%" alignContent="Center" >


        <HBox justifyContent="SpaceBetween">

            <Label text="{i18n>lbldocsafectados}" design="Bold" />
            <ObjectNumber number="1000" unit="$" inverted="true" state="Success"/>

        </HBox>

        <HBox justifyContent="SpaceBetween">
            <Label text="{i18n>lbldescuentos}" design="Bold" />
            <ObjectNumber number="1000" unit="$" state="Error" />
        </HBox >

        <HBox justifyContent="SpaceBetween">
            <Label text="{i18n>lblretenciones}" design="Bold"/>
            <ObjectNumber number="1000" unit="$" state="Error"/>
        </HBox>

        <HBox justifyContent="SpaceBetween">
            <Label text="{i18n>lblpagoacta}" design="Bold" />
            <ObjectNumber number="10000" unit="$" state="Error"/>
        </HBox>

        <HBox justifyContent="SpaceBetween">
            <Label text="{i18n>lblmedios}"  design="Bold"/>
            <ObjectNumber number="10000" unit="$" state="Error"/>
        </HBox>
        <Label text="{i18n>lbltotal}" visible="{= ${mockdata>/Cliente/Anticipo} === false }" design="Bold"/>
        <ObjectNumber number="1000" unit="$" visible="{= ${mockdata>/Cliente/Anticipo} === false }" inverted="true" state="Success"/>
        <HBox justifyContent="SpaceBetween">
            <Label text="{i18n>lblimporteacta}" visible="{mockdata>/Cliente/Anticipo}" design="Bold"/>
            <ObjectNumber number="1000" unit="$" visible="{mockdata>/Cliente/Anticipo}" inverted="true" state="Success"/>
        </HBox>









    </VBox>


    <OverflowToolbar >
        <ToolbarSpacer/>
        <Button icon="sap-icon://sys-cancel" text="{i18n>btnanular}" type="Reject"/>
        <Button icon="sap-icon://message-success" text="{i18n>btnconfirmar}" type="Success"/>

    </OverflowToolbar>

</core:FragmentDefinition>

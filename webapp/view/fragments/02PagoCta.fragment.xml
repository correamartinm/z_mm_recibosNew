<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">



    <Table id="idPagoCtaTable" items="{mockdata>/Paso2Data}" mode="MultiSelect" selectionChange="onTablePagoCtaSelectionChange" noDataText="{i18n>msgnodata}" growing="true" growingTriggerText="{i18n>lblvermas}" fixedLayout="false" alternateRowColors="true" sticky="HeaderToolbar,ColumnHeaders">
        <headerToolbar>
            <OverflowToolbar>
                <SearchField width="75%" search="onSearchFieldSearchPagoCta" placeholder="{i18n>lblnumcomprobante}" />
                <ToolbarSpacer/>


            </OverflowToolbar>
        </headerToolbar>
        <columns>

            <Column width="2rem" hAlign="Center">
                <header>
                    <Label text="{i18n>lbltc}" tooltip="{i18n>lbltipocomprobante}"/>
                </header>
            </Column>
            <Column width="3rem" hAlign="Center">
                <header>
                    <Label text="{i18n>lblnumcomprobante}" wrapping="true"/>
                </header>
            </Column>
            <Column popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header>
                    <Label text="{i18n>lblfecha}"/>
                </header>
            </Column>


            <Column popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header>
                    <Label text="{i18n>lblimpor}"/>
                </header>
            </Column>
            <Column popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header>
                    <Label text="{i18n>lblsaldo}"/>
                </header>
            </Column>
            <Column width="100px" popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header>
                    <Label text="{i18n>lblaplicado}"/>
                </header>
            </Column>
            <Column visible="false" width="100px" popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header>
                    <!-- <Label text="{i18n>lblaplicado}"/> -->
                </header>
            </Column>
            <Column popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header/>
            </Column>


        </columns>
        <items>
            <ColumnListItem type="Active" highlight="Information">
                <cells>



                    <Text text="{mockdata>Tipo}" wrapping="false"/>
                   
                    <Label text="{mockdata>Numero}"/>
                    <Label text="{path : 'mockdata>Fecha' , formatter : '.formatFecha'}" design="Bold"/>
                    

                    <Label text="{mockdata>Importe}"/>
                    <Label text="{mockdata>Saldo}"/>
                    
                    <Input enabled="false" value="{mockdata>Aplicado}" textAlign="End" change="onInputImporteChangePagos"/>
                    <HBox visible="false">
                        <Button icon="sap-icon://delete" press="onButtonDeletePress" class="sapUiTinyMarginBeginEnd" />
                        <Button icon="sap-icon://edit" press="onButtonEditPress" />
                    </HBox>


                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <OverflowToolbar visible="{= ${mockdata>/Paso02CantidadPagos} > 0 }">
        <content>
            <ToolbarSpacer />
            <!-- <HBox visible="{= ${/Paso03CantidadComprobantes} > 0 }">
            </HBox> -->

            <!-- <HBox visible="{= ${/Paso03CantidadComprobantes} > 0 }"> -->
            <Label text="{i18n>lblseleccion}: " />
            <Label text="{i18n>lblpagoacta}" />
            <Label text="{mockdata>/Paso02CantidadPagos}" design="Bold" class="sapUiTinyMarginBeginEnd" />

            <Label text="{i18n>lblimpor}" />
            <Label text="{mockdata>/Paso02ImportePagos}" design="Bold" />
            <!-- </HBox> -->
        </content>

    </OverflowToolbar>



    <!-- <HBox alignItems="Center" justifyContent="End" class="sapUiSmallMarginEnd">
        <Button text="Cerrar" iconDensityAware="false" class="sapUiTinyMarginEnd" />
        <Button enabled="{/AddButtonActive}" text="Guardar" type="Emphasized" icon="sap-icon://save" press="guardarAdicional" />
    </HBox> -->
</core:FragmentDefinition>

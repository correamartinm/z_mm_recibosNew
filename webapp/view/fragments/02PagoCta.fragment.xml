<core:FragmentDefinition xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">



    <Table id="idPagoCtaTable" mode="MultiSelect" selectionChange="onTablePagoCtaSelectionChange" items="{path : 'mockdata>/Paso02PagoaCta' ,sorter: [ { path: 'Fecha', descending: true }  ]   }" noDataText="{i18n>msgnodata}" growing="true" growingTriggerText="{i18n>lblvermas}" fixedLayout="false" alternateRowColors="true" sticky="HeaderToolbar,ColumnHeaders">
        <headerToolbar>
            <OverflowToolbar>
                <SearchField width="75%" search="onSearchFieldSearchPagoCta" placeholder="{i18n>lblnumcomprobante}" />
                <ToolbarSpacer/>


            </OverflowToolbar>
        </headerToolbar>
        <columns>

            <Column width="2rem" hAlign="Center">
                <header>
                    <Label text="{i18n>lbltc}" tooltip="{i18n>lbltipocomprobante}"/>
                </header>
            </Column>
            <Column width="3rem" hAlign="Center">
                <header>
                    <Label text="{i18n>lblnumcomprobante}" wrapping="true"/>
                </header>
            </Column>
            <Column popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header>
                    <Label text="{i18n>lblfecha}"/>
                </header>
            </Column>


            <Column popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header>
                    <Label text="{i18n>lblimpor}"/>
                </header>
            </Column>
            <Column popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header>
                    <Label text="{i18n>lblsaldo}"/>
                </header>
            </Column>
            <Column width="100px" popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header>
                    <Label text="{i18n>lblaplicado}"/>
                </header>
            </Column>
            <Column popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header/>
            </Column>


        </columns>
        <items>
            <ColumnListItem type="Active" highlight="Information">
                <cells>



                    <Text text="{mockdata>TC}" wrapping="false"/>
                    <!-- <Text text="{path : 'START' , formatter : '.formatFecha'}"/> -->
                    <Label text="{mockdata>Numero}"/>
                    <Label text="{mockdata>Fecha}" design="Bold"/>
                   
                    <Label text="{mockdata>Importe}"/>
                    <Label text="{mockdata>Saldo}"/>
                    <Label text="{mockdata>Aplicar}"/>
                    <!-- <Input enabled="false" value="{mockdata>Aplicar}" textAlign="End" change="onInputImporteChange"/> -->
                    <HBox visible="false">
                        <Button icon="sap-icon://delete" press="onButtonPrintPress" class="sapUiTinyMarginBeginEnd" />
                        <Button icon="sap-icon://edit" press="onButtonPrintPress" />
                    </HBox>


                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <OverflowToolbar visible="{= ${mockdata>/Paso02CantidadPagos} > 0 }">
        <content>
            <ToolbarSpacer />
            <!-- <HBox visible="{= ${mockdata>/Paso03CantidadComprobantes} > 0 }">
            </HBox> -->

            <!-- <HBox visible="{= ${mockdata>/Paso03CantidadComprobantes} > 0 }"> -->
            <Label text="{i18n>lblseleccion}: " />
            <Label text="{i18n>lblpagoacta}" />
            <Label text="{mockdata>/Paso02CantidadPagos}" design="Bold" class="sapUiTinyMarginBeginEnd" />

            <Label text="{i18n>lblimpor}" />
            <Label text="{mockdata>/Paso02ImportePagos}" design="Bold" />
            <!-- </HBox> -->
        </content>

    </OverflowToolbar>



    <!-- <HBox alignItems="Center" justifyContent="End" class="sapUiSmallMarginEnd">
        <Button text="Cerrar" iconDensityAware="false" class="sapUiTinyMarginEnd" />
        <Button enabled="{mockdata>/AddButtonActive}" text="Guardar" type="Emphasized" icon="sap-icon://save" press="guardarAdicional" />
    </HBox> -->
</core:FragmentDefinition>

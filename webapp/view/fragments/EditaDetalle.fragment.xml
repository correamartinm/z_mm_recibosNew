<core:FragmentDefinition xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

 

    <Table items="{path : '/PagosSet' }" noDataText="{i18n>msgnodata}" growing="true" growingTriggerText="{i18n>lblvermas}" fixedLayout="false" alternateRowColors="true" sticky="HeaderToolbar,ColumnHeaders" visible="{= ${layout>/EditaMP} === false }">
        <headerToolbar>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <!-- <Button icon="sap-icon://sys-add" press="onAgregarDetalleButtonPress" text="{i18n>btnagregar}" type="Emphasized" /> -->

            </OverflowToolbar>
        </headerToolbar>
        <columns>

            <Column width="12rem">
                <header>
                    <Label text="{i18n>lbltc}" tooltip="{i18n>lblmedios}"/>
                </header>
            </Column>
            <Column popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header>
                    <Label text="{i18n>lbldescripcion}"/>
                </header>
            </Column>
            <Column popinDisplay="Inline" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                <header>
                    <Label text="{i18n>lblimpor}"/>
                </header>
            </Column>
            <Column width="3rem">
                <header/>
            </Column>

        </columns>
        <items>
            <ColumnListItem type="Active" highlight="Information">
                <cells>


                    <Text text=" {TipoComprobante}"/>
                    <HBox >
                        <Text text="{Numero}" wrapping="false"/>
                        <Text text="{path : 'FechaEmision', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'dd/MM/yyyy'}}"/>
                        <Text text="{NroCheque}"/>
                    </HBox>
                    <Text text="{Importe}"/>

                    <HBox>
                        <Button icon="sap-icon://edit" press="onShowEditMP" class="sapUiTinyMarginEnd"/>
                        <!-- <Button icon="sap-icon://attachment" press="onButtonAtachPress" /> -->
                    </HBox>


                </cells>
            </ColumnListItem>
        </items>
    </Table>

    <VBox visible="{layout>/EditaMP}">
        <HBox justifyContent="End"  visible="{= ${mockdata>/Paso03ImporteComprobantes} > 0}">
            <!-- <Button icon="sap-icon://message-information" text="{i18n>msginfotitle}" press="onShowInfoMsg" class="sapUiTinyMarginEnd"/> -->
           
        </HBox>
        <form:SimpleForm editable="true" layout="ColumnLayout" visible="{layout>/EditaMP}">
            <form:content>
                <Label text="{i18n>lblmedios}" required="true" />
                <Select id="idselectMPED" items="{/DetallePagoSet}" change="onInputTipoPagoChange" selectedKey="{mockdata>/ActiveDetalle/MpKey}" >
                    <core:Item key="{Codigo}" text="{Descripcion}" />
                </Select>

                <Label text="{i18n>lblnumcomprobante}" required="true"  visible="{mockdata>/ActiveMP/DetCbte}"/>
                <Input id="idDetComprobanteED" type="Number" visible="{mockdata>/ActiveMP/DetCbte}"  value="{mockdata>/ActiveDetalle/NroCte}"/>

                <Label text="{i18n>lblimpor}" required="true" />
                <Input id="idImportePagoInputED" type="Number" value="{mockdata>/ActiveDetalle/Importe}"/>
                <Label text="{i18n>lblfechaemision}" required="true" visible="{mockdata>/ActiveMP/FecEmis}"/>
                <DatePicker id="idDetFechaEmisionED" displayFormat="dd/mm/YYYY" visible="{mockdata>/ActiveMP/FecEmis}"  dateValue="{mockdata>/ActiveDetalle/FecEmis}"/>

                <Label text="{i18n>lblfechadeposito}" required="true"  visible="{mockdata>/ActiveMP/FecVto}" />
                <DatePicker id="idDetFecDepositoED" displayFormat="dd/mm/YYYY" visible="{mockdata>/ActiveMP/FecVto}" dateValue="{mockdata>/ActiveDetalle/FecDepo}"/>


                <Label text="{i18n>lblncheque}" required="true"  visible="{mockdata>/ActiveMP/NroCheq}"/>
                <Input id="idDetNroChequeED" visible="{mockdata>/ActiveMP/NroCheq}" value="{mockdata>/ActiveDetalle/NroCheq}"/>

                <Label text="{i18n>lblbcodestino}" required="{mockdata>/ActiveMP/BcoDesReq}"  visible="{mockdata>/ActiveMP/BcoDes}"/>
                <Input id="idDetBcoDestinoED" visible="{mockdata>/ActiveMP/BcoDes}" value="{mockdata>/ActiveDetalle/BcoDes}"/>

                <Label text="{i18n>lblbcoemisor}" required="true"  visible="{mockdata>/ActiveMP/BcoEmi}"/>
                <Input id="idDetBcoEmisorED" visible="{mockdata>/ActiveMP/BcoEmi}"  value="{mockdata>/ActiveDetalle/BcoEmi}"/>

                <Label text="{i18n>lblvencimientocheque}" required="true"  visible="{mockdata>/ActiveMP/FecVto}"/>
                <DatePicker id="idDetFecVtoED" displayFormat="dd/mm/YYYY" visible="{mockdata>/ActiveMP/FecVto}" dateValue="{mockdata>/ActiveDetalle/FecVto}"/>





            </form:content>

        </form:SimpleForm>


    </VBox>
</core:FragmentDefinition>
